                         <TextBlock x:Name="CodeExampleHeadphones1" Height="30" FontSize="14"  Text="Код"/> 
                         <TextBlock x:Name="KindExampleHeadphones1" Height="18" FontSize="14"  Text="Вид устройства"/> 
