                    </StackPanel>
                    <StackPanel Height="199" RenderTransformOrigin="0.5,0.5" Width="335">
                        <TextBlock x:Name="NameExampleHeadphones1Y" TextWrapping="Wrap" Height="52" FontSize="20"  Text="12"/>
